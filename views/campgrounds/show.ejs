<%layout('layouts/boilerplate') %>
    
<div class="row justify-content-center mb-3">
    <div class="col-6">
        <div class="card">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= campground.location %></li>
              <li class="list-group-item">$ <%= campground.price %>/night</li>
              <li class="list-group-item"><a href="/campgrounds" class="card-link btn btn-dark btn-sm">All campgrounds</a> </li>
            </ul>
            <div class="card-body">
              <a href="/campgrounds/<%= campground.id %>/edit" class="card-link btn btn-info">Edit</a>
              <form action="/campgrounds/<%= campground.id %>?_method=delete" method="post" class="d-inline">
                <button class="btn btn-danger">DELETE</button>
              </form>
            </div>
        </div>
    </div>
</div>
    
    