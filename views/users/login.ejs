<% layout('layouts/boilerplate') %>

    <div class="row justify-content-center mb-3">
        <div class="col-4">
            <div class="card">
                <img class="card-img-top" src="https://images.unsplash.com/photo-1469474968028-56623f02e42e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8bmF0dXJlfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" alt="">
                <div class="card-body">
                    
                    <h2 class="card-title text-center mb-3">Login</h2>
                    <form action="/login" method="post" class="validated-form" novalidate>

                        <div class="mb-4">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-dark w-100 my-3">Login</button>

                    </form>
                </div>
            </div>

        </div>
    </div>